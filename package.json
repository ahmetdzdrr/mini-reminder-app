{
	"name": "password-manager",
	"version": "1.0.0",
	"description": "Güvenli Şifre Yöneticisi",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"pack": "electron-builder --dir"
	},
	"build": {
		"appId": "com.sifre.yoneticisi",
		"productName": "Şifre Yöneticisi",
		"directories": {
			"output": "dist"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.png"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Şifre Yöneticisi",
			"installerIcon": "assets/icon.png",
			"uninstallerIcon": "assets/icon.png",
			"installerHeaderIcon": "assets/icon.png",
			"menuCategory": true,
			"displayLanguageSelector": true,
			"perMachine": true,
			"runAfterFinish": true
		}
	},
	"author": "gamzesirin",
	"license": "ISC",
	"dependencies": {
		"@electron/remote": "^2.1.2",
		"crypto-js": "^4.2.0",
		"sharp": "^0.33.5"
	},
	"devDependencies": {
		"electron": "^28.1.0",
		"electron-builder": "^24.9.1"
	}
}
